<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="7.2"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="right|bottom"
        android:layout_weight="0.3"
        android:orientation="horizontal"
        android:background="#f0f0f0">

        <ImageButton
            android:id="@+id/close_guide_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="top"
            android:background="@drawable/ic_baseline_close_24"></ImageButton>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.9"
        android:weightSum="6.9"
        android:orientation="vertical"
        android:background="#f0f0f0">

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.58"
            android:text="  사용설명서"
            android:textColor="#6c6c6c"
            android:textStyle="bold"
            android:textSize="25dp"
            android:drawableLeft="@drawable/guide_icon"
            android:backgroundTint="@color/white"
            android:paddingLeft="20dp"
            android:background="@drawable/round"
            android:layout_margin="10dp"
            android:gravity="center|left"></Button>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#989898"
            android:layout_weight="0.02"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.299"
            android:orientation="horizontal"
            android:background="@color/white"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="1"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.001"/>

                <LinearLayout
                    android:id="@+id/alarm_together_image"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.998"
                    android:background="@drawable/alarm_together_notice"
                    android:orientation="vertical"
                    android:weightSum="8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8"
                        android:weightSum="1"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.3"></View>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.7"
                            android:text=" 메인 알람창"
                            android:textSize="30dp"
                            android:gravity="bottom"
                            android:drawableLeft="@drawable/one"
                            android:paddingLeft="15dp"
                            android:background="@drawable/round_gray"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.2"
                        android:padding="15dp"
                        android:text="• 핵심 기능 : 개인 알람 추가 및 on/off, 개인알람 확인, 그룹알람 확인"
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8"
                        android:weightSum="1"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.3"></View>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.7"
                            android:text=" 그룹창"
                            android:textSize="30dp"
                            android:gravity="bottom"
                            android:drawableLeft="@drawable/two"
                            android:paddingLeft="15dp"
                            android:background="@drawable/round_gray"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.2"
                        android:padding="15dp"
                        android:text="• 핵심 기능 : 그룹 정보 (그룹 멤버, 인원, 그룹 알람) 확인, 그룹 추가 및 탈퇴"
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8"
                        android:weightSum="1"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.3"></View>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.7"
                            android:text=" 친구창"
                           android:textSize="30dp"
                            android:gravity="bottom"
                            android:drawableLeft="@drawable/three"
                            android:paddingLeft="15dp"
                            android:background="@drawable/round_gray"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.2"
                        android:padding="15dp"
                        android:text="• 핵심 기능 : 친구 추가 요청하기 및 받기, 친구 목록 보기"
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8"
                        android:weightSum="1"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.3"></View>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.7"
                            android:text=" 프로필창"
                            android:textSize="30dp"
                            android:gravity="bottom"
                            android:drawableLeft="@drawable/four"
                            android:paddingLeft="15dp"
                            android:background="@drawable/round_gray"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.2"
                        android:padding="15dp"
                        android:text="• 핵심 기능 : 프로필 사진 바꾸기, 공지사항, 사용설명서, 문의"
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.001"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.001">

        </View>

    </LinearLayout>


</LinearLayout>