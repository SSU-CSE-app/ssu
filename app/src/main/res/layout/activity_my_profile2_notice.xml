<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="7.2"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="right|bottom"
        android:layout_weight="0.3"
        android:orientation="horizontal"
        android:background="#f0f0f0">

        <ImageButton
            android:id="@+id/close_notice_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="top"
            android:background="@drawable/ic_baseline_close_24"></ImageButton>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.9"
        android:weightSum="6.9"
        android:orientation="vertical"
        android:background="#f0f0f0">

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.58"
            android:text=" 공지사항"
            android:textColor="#6c6c6c"
            android:textStyle="bold"
            android:textSize="25dp"
            android:drawableLeft="@drawable/notice_icon"
            android:backgroundTint="@color/white"
            android:background="@drawable/round"
            android:layout_margin="10dp"
            android:gravity="center|left"
            android:paddingLeft="20dp"></Button>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#989898"
            android:layout_weight="0.02"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.299"
            android:orientation="horizontal"
            android:weightSum="1"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="1"
                android:orientation="vertical"
                android:id="@+id/alarm_together_image"
                android:background="@drawable/alarm_together_notice">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="8">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"></View>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.6"
                        android:text="  version (v0.0.1)"
                        android:textSize="30dp"
                        android:paddingLeft="15dp"
                        android:drawableLeft="@drawable/circle"></TextView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"></View>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.6"
                        android:text="  점검 안내"
                        android:textSize="30dp"
                        android:paddingLeft="15dp"
                        android:drawableLeft="@drawable/circle"></TextView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"></View>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.6"
                        android:text="  알람이 안울린다고요?"
                        android:textSize="30dp"
                        android:paddingLeft="15dp"
                        android:drawableLeft="@drawable/circle"></TextView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.001">

        </View>

    </LinearLayout>


</LinearLayout>