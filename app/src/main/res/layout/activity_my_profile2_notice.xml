<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="7.2"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="right|bottom"
        android:layout_weight="0.3"
        android:orientation="horizontal"
        android:background="#f0f0f0">

        <ImageButton
            android:id="@+id/close_notice_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="top"
            app:srcCompat="@drawable/ic_baseline_close_24"
            tools:ignore="VectorDrawableCompat"
            android:background="#F00"></ImageButton>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.9"
        android:weightSum="6.9"
        android:orientation="vertical"
        android:background="#f0f0f0">

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.58"
            android:text="공지사항"
            android:textColor="#6c6c6c"
            android:textStyle="bold"
            android:textSize="25dp"
            android:drawableLeft="@drawable/notice_icon"
            android:backgroundTint="@color/white"
            android:background="@drawable/round"
            android:layout_margin="10dp"
            android:gravity="center|left"
            android:paddingLeft="20dp"></Button>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#989898"
            android:layout_weight="0.02"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.299"
            android:orientation="horizontal"
            android:weightSum="1"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="1"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.001"/>

                <ListView
                    android:id="@+id/alarm_together_image"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.998"
                    android:background="@drawable/alarm_together_notice"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.001"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.001">

        </View>

    </LinearLayout>


</LinearLayout>