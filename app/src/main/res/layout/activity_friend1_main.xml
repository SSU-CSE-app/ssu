<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="10"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical"
            android:weightSum="9">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="horizontal"
                android:weightSum="4"
                android:background="#f0f0f0">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:orientation="horizontal"
                    android:gravity="center|left"
                    android:paddingLeft="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginBottom="27dp"
                    android:background="@drawable/round_green">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:text="친구 : "
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:gravity="center|left" />
                    <TextView
                        android:id="@+id/tv_friend_num"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:gravity="center|left"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:background="#f0f0f0">
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.3"
                    android:orientation="vertical"
                    android:gravity="right|center">

                    <ImageButton
                        android:id="@+id/btn_add_friend"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/add"
                        android:background="@drawable/board_layout"></ImageButton>

                    <Button
                        android:id="@+id/btn_friend_request"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:text="받은 친구요청"
                        android:textColor="#6c6c6c"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/round"></Button>
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.01"
                android:background="#989898"></View>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_friend"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7.49"
                android:divider="#ffffff"
                android:dividerHeight="20dp"
                android:clipToPadding="false"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>


        </LinearLayout>



    </LinearLayout>


</LinearLayout>