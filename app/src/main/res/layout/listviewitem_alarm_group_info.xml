<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_group_info_alarm_participants"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:text="7"
                android:textSize="10dp"
                android:gravity="center|bottom"/>
            <ImageView
                android:id="@+id/iv_group_info_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_baseline_group_35">

            </ImageView>
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_group_info_alarm_time"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:text="알람시간"
                android:gravity="center|left"
                android:textSize="25dp"
                android:textStyle="bold"
                android:paddingLeft="8dp"/>

            <TextView
                android:id="@+id/tv_group_info_repeat_day"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="13dp"
                android:text="월 화 수 목 금 토 "></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="center|left">

                    <Switch
                        android:id="@+id/sw_group_info_alarm_switch"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:switchMinWidth="50dp">

                    </Switch>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/btn_delete_group_alarm"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/ic_baseline_delete_forever_30">

                    </ImageButton>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>