<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="7.2"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="right|bottom"
        android:layout_weight="0.6"
        android:orientation="horizontal"
        android:background="@color/white">


        <ImageButton

            android:id="@+id/close_group_member_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="top"
            android:background="@drawable/ic_baseline_close_24"></ImageButton>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.6"
        android:weightSum="5"
        android:orientation="vertical"
        android:background="#B8CCE4">

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="그룹 멤버"
            android:textColor="#6c6c6c"
            android:textStyle="bold"
            android:textSize="25dp"
            android:drawableLeft="@drawable/ic_baseline_group_35"
            android:backgroundTint="@color/white"
            android:background="@drawable/round"
            android:layout_margin="10dp"
            android:gravity="center|left"
            android:paddingLeft="20dp"></Button>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_group_member"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_weight="4"></androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>